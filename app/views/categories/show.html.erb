<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="filter col-sm-2">
      <div class="row">
        <div class="col-sm-5">
          Category
        </div>
        <div class="col-sm-7">
          <ul>
            <li>
              <%= link_to "All", components_path %>
            </li>
            <% @categories.each do |category| %>
            <li>
              <%= link_to category.name, category%>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-sm-10">
      <div class="row components-list-title">
        <%= @category.name %>
      </div>
       <div class="components-list row">
        <% @components.each do |component| %>
        <% if component.category == @category %>
          <div class="components-show col-sm-3">
            <div class="row">
              <%= link_to component.name, component, class:"component-name"%>
            </div>
            <div class="row">
              <div class="square">
                <%= link_to image_tag(component.images.first, class:"img-responsive square-content"), component %>
              </div>
            </div>
            <div class="row">
              <%= link_to 'Edit', edit_component_path(component), class:"btn info" %>
              <%= link_to 'Delete', component, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn info" %>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
      <div class="new-component row">
        <%= link_to 'New Component', new_component_path, class:"btn info" %>
      </div>
    </div>
 </div>
