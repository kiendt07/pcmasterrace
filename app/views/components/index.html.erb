<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="filter col-sm-2">
      <div class="row">
        <div class="col-sm-5">
          Category
        </div>
        <div class="col-sm-7">
          <ul>
            <li>
              <%= link_to "All", categories_path %>
            </li>
            <% @categories.each do |category| %>
            <li>
              <%= link_to category.name, category%>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-sm-10">
       <div class="components-list">
        <% @components.each do |component| %>
          <div class="components-show col-sm-3" style="background-color:#f4e8a8; display:block;">
            <%= link_to component.name, component, class:"row"%>
            <%= link_to image_tag(component.images.first, class:"img-responsive"), component, class:"row" %>
            <div class="row">
              <%= link_to 'Edit', edit_component_path(component), class:"btn info" %>
              <%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn info" %>
            </div>
          </div>
        <% end %>
      </div>
      <%= link_to 'New Component', new_component_path %>
    </div>
 </div>
