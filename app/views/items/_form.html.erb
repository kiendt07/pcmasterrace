<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :release_date%>
    <%= f.date_field :release_date%>
  </div>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category_id, Category.all.collect {|c| [c.name, c.id] } %>
  </div>

  
  <div class="field">
    <%= f.label :manufacturer %><br>
    <%= f.select :manufacturer_id, Manufacturer.all.collect {|m| [m.name, m.id] } %>
  </div>

  <div class="field">
    <%= f.label :images %><br>
    <%= f.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>