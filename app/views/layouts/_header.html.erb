<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t("static_pages.application.link_to_1"), root_path, class: "logo" %></li>
        <li><%= link_to "Component List", components_path %></li>
        <form class="navbar-form navbar-left">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
      </form> 
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to @current_user.name, current_user %></li>
          <li><%= link_to t("static_pages.header.logout"), logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to t("static_pages.header.log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
