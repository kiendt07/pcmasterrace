<% provide :title, t("user.acc_reset_pass.new.title") %>
<h1><%= t "user.acc_reset_pass.new.header" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.submit t("user.acc_reset_pass.new.submit_btt"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
