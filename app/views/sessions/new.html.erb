<% provide :title, t("session.login.header") %>
<h1><%= t "session.login.header" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= link_to t("session.login.forgot_pass"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "session.login.sentence_remember" %></span>
      <% end %>

      <%= f.submit t("session.login.login_btn"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "session.login.sentence_new" %>
      <%= link_to t("session.login.signup_now"), signup_path %></p>
  </div>
</div>
