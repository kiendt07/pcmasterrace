<% if logged_in? %>
  <div class="row">
    <div class="filter col-sm-3">
      <div class="row">
        <div class="col-sm-5">
          Category
        </div>
        <div class="col-sm-7">
          <ul>
            <li>
              <%= link_to "All", categories_path %>
            </li>
            <% @categories.each do |category| %>
            <li>
              <%= link_to category.name, category%>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="components-list col-sm-9">
      <% @components.each do |component| %>
        <div class="components-show col-sm-4" style="background-color:red; display:block;">
          <%= link_to component.name, component, class:"row"%>
          <%= link_to image_tag(component.images.first, class:"img-responsive"), component, class:"row" %>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.sentence_0" %></h1>
  
    <h2>
      <%= t "static_pages.home.sentence_1" %>
      <%= link_to t("static_pages.home.link"), "#" %>
      <%= t "static_pages.home.sentence_2" %>
    </h2>
  
    <%= link_to t("static_pages.home.link_to_1"), signup_path,
      class: "btn btn-lg btn-primary" %>
  </div>
<% end %>

