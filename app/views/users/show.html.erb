  <div class="container">
  <div class="row">
		<div class="col-lg-3 col-sm-6">

            <div class="card hovercard">
                <div class="cardheader">

                </div>
                <div class="avatar">
                    <%= gravatar_for @user %>
                </div>
                <div class="info">
                    <div class="title">
                        <a target="_blank"><%= @user.name %></a>
                    </div>
                    <div class="desc">Reviews: </div>
                    <div class="desc"><%= link_to 'Edit Profile', edit_user_path(@user) %></div>
                    
                </div>
            </div>
            <div class="col-md-8">
                <% if @user.reviews.any? %>
                    <h3>Reviews (<%= @user.reviews.count %>)</h3>
                    <% @user.reviews.each do |review| %>
                        <hr>
                        <p>
                            Reviews: <%= review.id %><br/>
                            Content: <%= review.content %><br/>
                        </p>
                    <% end %>
                <% end %>
            </div>
        </div>

	</div>
</div>
</div>
